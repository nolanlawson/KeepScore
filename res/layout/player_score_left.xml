<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center_vertical|center_horizontal">
	
	
	<FrameLayout android:layout_width="0px" android:layout_weight=".85" android:layout_height="fill_parent"
		android:background="@drawable/blue_border_shape">
	
		<include layout="@layout/player_score_no_history"/>
	
	</FrameLayout>
	
	
	<com.nolanlawson.keepscore.widget.AutofitTextView android:layout_width="0px" android:layout_weight=".15" android:layout_height="fill_parent"
		android:gravity="left" android:id="@+id/text_history" android:paddingTop="3dp"
		android:paddingBottom="3dp" android:typeface="monospace" android:paddingLeft="3dp"
		android:textSize="@dimen/player_score_history" android:focusable="true"
		android:clickable="true" android:background="@drawable/generic_selector"/>
	
	

</LinearLayout>