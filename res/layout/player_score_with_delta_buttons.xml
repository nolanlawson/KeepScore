<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center_vertical|center_horizontal"
	android:background="@drawable/blue_border_shape">
	
	<include layout="@layout/player_score_bare" 
			android:layout_width="fill_parent" 
			android:layout_height="0px"
			android:layout_weight="0.7"/>
			
	<View android:layout_height="2px" android:layout_width="fill_parent" 
		android:background="@color/light_blue_2"
		android:id="@+id/player_score_divider_2"/>	
			
	<LinearLayout android:layout_width="fill_parent" android:layout_height="0px" 
			android:layout_weight="0.3" android:orientation="horizontal"
			android:paddingTop="3dp">

		<Button android:id="@android:id/button1" android:layout_width="0px"
			android:layout_weight="0.25" android:layout_height="fill_parent"
			android:text="+1" android:textSize="@dimen/delta_non_popup"
			android:typeface="monospace"/>

		<Button android:id="@android:id/button2" android:layout_width="0px"
			android:layout_weight="0.25" android:layout_height="fill_parent"
			android:text="+5" android:textSize="@dimen/delta_non_popup"
			android:typeface="monospace"/>

		<Button android:id="@android:id/button3" android:layout_width="0px"
			android:layout_weight="0.25" android:layout_height="fill_parent"
			android:text="+10" android:textSize="@dimen/delta_non_popup" 
			android:typeface="monospace"/>

		<Button android:id="@+id/button4" android:layout_width="0px"
			android:layout_weight="0.25" android:layout_height="fill_parent"
			android:text="+20" android:textSize="@dimen/delta_non_popup"
			android:typeface="monospace"/>
				
	</LinearLayout>	
</LinearLayout>